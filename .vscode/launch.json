    "version": "0.2.0",
    "configurations": [
        {
          "name": "Debug test suite",
          "type": "node2",
          "request": "launch",
          "stopOnEntry": true,
          "port": 9229,
          "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
          "runtimeArgs": ["--harmony_async_await", "--nolazy", "--debug-brk", "--inspect"],
          "args": ["--require", "source-map-support/register", "test-no-cov"],
          "smartStep": true
        }
    ]
}
